<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:fontFamily="@font/akronim"
      android:text="ĐĂNG KÝ"
      android:textSize="25dp"
      android:textStyle="bold"
      android:gravity="center"
      />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập email người dùng"
        android:id="@+id/edt_tk"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập mật khẩu"
        android:id="@+id/edt_mk"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập tên của bạn"
        android:id="@+id/edt_ten"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập số điện thoại"
        android:id="@+id/edt_sdt"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập địa chỉ"
        android:id="@+id/edt_diachi"

        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="20dp"
            android:id="@+id/btn_huy"
            android:backgroundTint="#883E3E"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/aladin"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="ĐỒNG Ý"
            android:textSize="20dp"
            android:id="@+id/btn_dongy"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#883E3E"
            android:fontFamily="@font/aladin"/>


    </LinearLayout>
</LinearLayout>