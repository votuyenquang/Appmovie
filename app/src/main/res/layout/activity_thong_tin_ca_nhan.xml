<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ThongTinCaNhan">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_convert_thongtincanhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:text="Thông tin cá nhân của bạn"
            android:textSize="25dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Tên của bạn"
            android:id="@+id/edt_ten_u"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Số điện thoại"
            android:id="@+id/edt_sdt_u"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Địa chỉ"
            android:id="@+id/edt_diachi_u"

            />
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:layout_weight="1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Trở về"
                android:textSize="20dp"
                android:id="@+id/btn_trove_tt"
                android:fontFamily="@font/aladin"
                android:gravity="center"/>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:textSize="20dp"
                android:id="@+id/btn_capnhatcanhan"
                android:fontFamily="@font/aladin"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>